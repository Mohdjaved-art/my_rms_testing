<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".MainActivity">

    <!-- Logo at the top -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login text -->
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:text="Login"
        android:textSize="22sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent" />




    <!-- EditText with drawableStart -->
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_email"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="  Enter your email"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_pass"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="   password"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tv_fpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        android:text="forgot password ?"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_pass"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:id="@+id/tv_signin"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="95dp"
        android:background="@color/dark_y"
        android:layout_marginStart="80dp"
        android:text="Signin"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="@+id/tv_pass"

        app:layout_constraintTop_toBottomOf="@id/tv_pass"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/or"
        android:layout_height="wrap_content"
        android:text="@string/line"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_signin"
        />



    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_createAccount"
        android:text="create new account"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/or"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="SignUp"
        android:id="@+id/signupss"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/or"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_createAccount"
        android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>