<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
     tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bg">


    <!-- Logo at the top -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login text -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:text="Signup"
        android:textSize="22sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent" />




    <!-- EditText with drawableStart -->
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_EnterYourname"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="  Enter your Name"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_email"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="Enter your mobile number"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_EnterYourname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_ph"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="Enter your email"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_serialno"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="Enter your product serial number"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_ph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_Gnamesystem"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="Give Name to your system"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_serialno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_pass"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="Enter your Password"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_Gnamesystem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_cpass"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="Confirm your Password"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_address"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="Enter your addres"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_cpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/tv_invoices"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/edit_bg"
        android:drawableStart="@drawable/ic_sharp_home_max_24"
        android:hint="upload your invoices"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:id="@+id/tv_signin"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:background="@color/dark_y"
        android:layout_marginStart="80dp"
        android:text="Signin"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="@+id/tv_ph"

        app:layout_constraintTop_toBottomOf="@id/tv_invoices"
        />



    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_createAccount"
        android:text="Already Register"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_signin"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="125dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="Login"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_signin"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_createAccount"
        android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
